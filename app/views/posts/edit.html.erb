<h1>Editing Post</h1>

<%= form_for(@post, :html => { :multipart => true }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Enter title of post", autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
    <div class="form-group">
      <%= f.submit "Submit post", class: "btn btn-primary" %>
    </div>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
