

 <%= form_for(@post, :html => { :multipart => true }) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  <%= f.fields_for :post_attachments do |p| %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
      <%= p.label :photo %>
      <%= p.file_field :photo, :multiple => true, name: "post_attachments[photo][]" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
  <% end %>
 