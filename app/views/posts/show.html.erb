<p id="notice"><%= notice %></p>

<section id="travels">
  <h1 class="section-title"> <%= @post.title %> </h1>
  <%= link_to 'Edit Title/body', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
  <div class="row">
    <% @post_attachments.each do |p| %>
    
      <div class="col-lg-4 col-sm-6 col-xs-12 gallery crop">
        <figure class="grayscale">
          <%= link_to image_tag(p.photo_url), p.photo_url, :rel => "lightbox", :title => "my caption"%>
          <%= link_to 'Edit Attachment', edit_post_attachment_path(p) %>
        </figure>
      </div>
    <% end %>
  </div>
  <hr class="line">
  <div class="extra-bottom">
    <%= @post.body %>
  </div>
</section>
  